s = "The Python version is 3.8"
print(s.find("Python")) #will give the index position 
print(s.find("3.8")) #will give the index position 

t = "Today is a great day !!!"
print(t.find("good")) # -1
print("hello world")


print(t.index("great"))
print(t.index("good"))

